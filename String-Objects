class StringsDemo {
	public static void main(String[] args) {
		String myName = "Petronius";

		myName = myName + " Arbiter";
		System.out.println("Name = " + myName);
	}
}


class BetterStringsDemo {
	public static void main)String[] args) {
		String myName = "Petronius";
		String occupation = "Reorganization Specialist";

		myName += " Arbiter";
		myName += " ";
		myName += "(" + occupation + ")";
		System.out.println("Name = " + myName);
	}
}


